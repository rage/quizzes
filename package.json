{
  "name": "quizzes",
  "license": "Apache-2.0 OR MIT",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/common",
    "packages/dashboard",
    "packages/migration"
  ],
  "scripts": {
    "start": "yarn run serve",
    "build": "yarn run build-ts",
    "serve": "node dist/backend/src/server.js",
    "watch-node": "nodemon --verbose dist/backend/src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "cd packages/common && tsc && cd ../backend && tsc && tscpaths -p tsconfig.json -s ./src -o ../../dist/backend/src && cd ../..",
    "watch-ts": "",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/backend/src/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "prettier": "prettier --write \"packages/**/*.js\" \"packages/**/*.ts\" \"packages/**/*.jsx\" \"packages/**/*.tsx\"",
    "prettier-check": "prettier  --list-different \"packages/**/*.js\" \"packages/**/*.ts\" \"packages/**/*.jsx\" \"packages/**/*.tsx\"",
    "db-migrate": "node --max-old-space-size=16384 dist/migration/src/index.js",
    "start-dashboard": "cd packages/dashboard && yarn start",
    "aggregate-states": "node --max-old-space-size=1024 dist/backend/src/scripts/aggregate_states.js"
  },
  "dependencies": {
    "@types/express-graphql": "^0.6.1",
    "@types/graphql-iso-date": "^3.3.0",
    "@types/progress": "^2.0.1",
    "apollo-server-express": "^2.0.6",
    "axios": "^0.18.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "buffer": "^5.1.0",
    "compression": "^1.7.2",
    "dataloader": "^1.4.0",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-async-handler": "^1.1.3",
    "express-graphql": "^0.6.12",
    "express-validator": "^5.2.0",
    "graphql": "^0.13.1",
    "graphql-iso-date": "^3.5.0",
    "graphql-tools": "^3.1.1",
    "highland": "^2.13.0",
    "keymirror": "^0.1.1",
    "lusca": "^1.6.0",
    "module-alias": "^2.1.0",
    "mongoose": "^5.2.9",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.4.3",
    "progress": "^2.0.0",
    "react-scripts-ts": "3.1.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "stream": "0.0.2",
    "tmc-client-js": "0.0.9",
    "typeorm": "^0.3.0-alpha.22",
    "uuid-by-string": "^0.6.0",
    "validate.js": "^0.12.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/jest": "^23.1.2",
    "@types/lusca": "^1.5.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.9.4",
    "@types/nodemailer": "^4.6.2",
    "@types/passport": "^0.4.6",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/request": "^2.47.1",
    "@types/sequelize": "^4.27.23",
    "@types/shelljs": "^0.8.0",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.2",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.6",
    "shelljs": "^0.8.2",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.0",
    "tsc-watch": "^1.0.30",
    "tsconfig-paths": "^3.6.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.1"
  },
  "nodemonConfig": {
    "watch": [
      "./dist/"
    ],
    "ext": "js",
    "delay": 1000,
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "./bin/check-code-style.sh"
    }
  },
  "_moduleAliases": {
    "@quizzes/common/config": "./packages/common/dist/config",
    "@quizzes/common/services": "./packages/common/dist/services",
    "@quizzes/common/types": "./packages/common/src/types"
  }
}
