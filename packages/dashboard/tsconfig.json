{
  "compilerOptions": {
    "lib": ["es2018", "dom", "esnext.asynciterable"],
    "outDir": "./dist",
    "rootDir": "./",
    "module": "commonjs",
    "baseUrl": "./src/",
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "declarationMap": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
