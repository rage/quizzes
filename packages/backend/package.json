{
  "name": "@quizzes/backend",
  "version": "0.0.1",
  "license": "Apache-2.0 OR MIT",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/src/server.js",
    "watch-node": "nodemon --verbose dist/backend/src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc && tscpaths -p tsconfig.json -s ./src -o dist/src",
    "watch-ts": "sh bin/watch-and-build.sh",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/backend/src/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "db-migrate": "node --max-old-space-size=16384 dist/backend/src/scripts/quiznator_migrate/index.js",
    "kafka-batch-publish": "node --max-old-space-size=2048 dist/src/scripts/kafka_batch_publisher.js",
    "refresh-reaktor-view": "node dist/src/scripts/reaktor_view_refresh.js"
  },
  "dependencies": {
    "JSONStream": "^1.3.5",
    "axios": "^0.19.2",
    "body-parser": "^1.18.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "compression": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "knex": "^0.21.1",
    "lodash": "^4.17.19",
    "module-alias": "^2.1.0",
    "morgan": "^1.9.1",
    "newrelic": "^6.4.2",
    "node-rdkafka": "^2.8.1",
    "pg": "^8.2.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "tmc-client-js": "0.0.9",
    "typedi": "^0.8.0",
    "typeorm": "^0.3.0-rc.19",
    "typeorm-routing-controllers-extensions": "^0.2.0",
    "typeorm-typedi-extensions": "^0.2.1",
    "uuid": "^8.1.0",
    "uuid-by-string": "^3.0.2",
    "validator": "^13.0.0",
    "websocket": "^1.0.31",
    "winston": "^3.2.1",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@sentry/node": "^5.15.5",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^1.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^25.2.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^14.0.5",
    "@types/redis": "^2.8.10",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "concurrently": "^5.2.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "tscpaths": "0.0.9",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "nodemonConfig": {
    "watch": [
      "./dist/"
    ],
    "ext": "js",
    "delay": 1000,
    "verbose": true
  }
}
